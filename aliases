# all-purpose aliases
alias h="cd ~"
alias c="clear"
alias hc="cd ~ && clear"
alias ll="ls -lhF"
alias lla="ls -lAhF"
alias ..="cd .."
alias ...="cd ../.."
alias apache="sudo /usr/sbin/apachectl"
alias dir_size="du -sh"
alias flush_cache="dscacheutil -flushcache"
alias updatedb="sudo /usr/libexec/locate.updatedb"
alias kat="pygmentize -f terminal -g"
alias mate="echo 'Did you mean subl perhaps?'"

# rails
alias migrate="rake db:migrate && rake db:test:clone"
alias gr="rake routes | grep"

# s3
alias s3="/usr/lib/s3sync/s3cmd.rb"

# heroku
alias hl="heroku logs -n 1000 > ~/Desktop/heroku_$(date +%Y_%m_%d_%H_%M_%S).txt && subl ~/Desktop/heroku_$(date +%Y_%m_%d_%H_%M_%S).txt"
alias hkds="git push heroku-staging staging:master"
alias hkd="git push heroku master"

# rails server (2.x and 3.x)
function rs {
  if [ -e script/rails ]; then
    bundle exec rails server $@
  else
    script/server $@
  fi
}

# rails console (2.x and 3.x)
function rc {
  if [ -e script/rails ]; then
    bundle exec rails console $@
  else
    script/console $@
  fi
}

# rails generate (2.x and 3.x)
function rg {
  if [ -e script/rails ]; then
    bundle exec rails generate $@
  else
    script/generate $@
  fi
}

# rails bundle exec
function be {
  bundle exec $@
}

# get full history diff of a file in git
# NOT CURRENTLY WORKING
function diffgit {
  git --no-pager log -p $0 > ~/Desktop/history.diff
}
